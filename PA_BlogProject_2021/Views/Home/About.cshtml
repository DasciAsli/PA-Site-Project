@model PA_BlogProject_2021.Models.ViewModel.AboutViewModel


@{
    ViewBag.Title = "Hakkımda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AboutSlider{

    @Html.Partial("_AboutSlider")

}


<!-- Section About Start -->
<section class="section about-2 position-relative">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="about-item pr-3 mb-5 mb-lg-0">
                    @foreach (var item in Model.Abouts)
                    {
                        <span class="h6 text-color">@item.Title</span>
                        <h2 class="mt-3 mb-4 position-relative content-title">@item.SubTitle</h2>
                        <p class="mb-5">@item.Description</p>
                        
                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="about-item-img">
                    <img src="~/Content/images/about/home-7.jpg" alt="" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Section About-İnfo Start -->
<section class="about-info section pt-0">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model.Abouts)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="about-info-item mb-4 mb-lg-0">
                        <h3 class="mb-3"><span class="text-color mr-2 text-md ">01.</span>@item.MissionTitle</h3>
                        <p>@item.MissonDescription</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="about-info-item mb-4 mb-lg-0">
                        <h3 class="mb-3"><span class="text-color mr-2 text-md ">02.</span>@item.VissionTitle</h3>
                        <p>@item.VissionDescription</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="about-info-item mb-4 mb-lg-0">
                        <h3 class="mb-3"><span class="text-color mr-2 text-md ">03.</span>@item.ApproachTitle</h3>
                        <p>@item.ApproachDescriptin</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<!-- Section Counter Start -->
<section class="section counter bg-counter">
    <div class="container">
        <div class="row">        
        </div>
    </div>
</section>


<!-- Section Team Start -->
<section class="section team">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 text-center">
                <div class="section-title">
                    <span class="h6 text-color">Takımımız</span>
                    <h2 class="mt-3 content-title">Profesyonel Yazılım Ekibimiz</h2>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var item in Model.Teams)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="team-item-wrap mb-5">
                        <div class="team-item position-relative">
                            <img src="@item.PersonImage" alt="" class="img-fluid w-100">
                            <div class="team-img-hover">
                                <ul class="team-social list-inline">
                                    <li class="list-inline-item">
                                        <a href="@item.FacebookURL" class="facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@item.TwitterURL" class="twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@item.InstagramURL" class="instagram"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@item.LinkedinURL" class="linkedin"><i class="fab fa-linkedin-in" aria-hidden="true"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="team-item-content">
                            <h4 class="mt-3 mb-0 text-capitalize">@item.PersonName</h4>
                            <p>@item.PersonJob</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<!-- Section Testimonial Start -->
<section class="section testimonial bg-gray">
    <div class="container">
        <div class="row justify-content-center">
        </div>
    </div>
</section>
