@model List<PA_BlogProject_2021.Models.Services>


@{
    ViewBag.Title = "Hizmetlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section AboutSlider{

    @Html.Partial("_AboutSlider")

}
<!--  Section Services Start -->
<section class="section service border-top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 text-center">
                <div class="section-title">
                    <span class="h6 text-color">Yeteneklerim</span>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="service-item mb-5">
                        <i class="ti-desktop"></i>
                        <h4 class="mb-3">@item.ServisName</h4>
                        <p>@item.ServisDescription</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- section Counter Start -->
<section class="section counter bg-counter">
    <div class="container">
        <div class="row">
        </div>
    </div>
</section>

